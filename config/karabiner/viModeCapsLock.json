{
"title": "ViModeCapsLock",
"rules": [
    {
        "description": "Vi Mode [Caps Lock as Trigger Key]",
        "manipulators": [
            {
                "description": "Sets caps lock as trigger key with no other effects.",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "trigger key pressed",
                            "value": 1
                        }
                    }
                ],
                "to_after_key_up": [
                    {
                        "set_variable": {
                            "name": "trigger key pressed",
                            "value": 0
                        }
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets j to left arrow. Works with selection.",
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_arrow"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets k to down arrow. Works with selection.",
                "from": {
                    "key_code": "k",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "down_arrow"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets i to up arrow. Works with selection.",
                "from": {
                    "key_code": "i",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "up_arrow"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets l to right arrow. Works with selection.",
                "from": {
                    "key_code": "l",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "right_arrow"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets o to backspace one character. With command, deletes whole line.",
                "from": {
                    "key_code": "o",
                    "modifiers": {
                        "optional": [
                            "command"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            
            {
                "description": "Sets n to enter.",
                "from": {
                    "key_code": "n"
                },
                "to": [
                    {
                        "key_code": "return_or_enter"
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets h to move cursor one full word to the left. Works with selection.",
                "from": {
                    "key_code": "h",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_arrow",
                        "modifiers": [
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets comma to alt+comma",
                "from": {
                    "key_code": "comma",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "comma",
                        "modifiers": [
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets period to alt+period",
                "from": {
                    "key_code": "period",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "period",
                        "modifiers": [
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets semicolon to move cursor right one full word. Works with selection.",
                "from": {
                    "key_code": "semicolon",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "right_arrow",
                        "modifiers": [
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets u to delete one full word to the left of the cursor.",
                "from": {
                    "key_code": "u"
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace",
                        "modifiers": [
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets p to delete one character to the left of the cursor.",   
                "from": {
                    "key_code": "p"
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace",
                        "modifiers": [
                            "fn"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets m to move cursor to start of line. Works with selection.",   
                "from": {
                    "key_code": "m",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_arrow",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Sets / to move cursor to end of line.",   
                "from": {
                    "key_code": "slash",
                    "modifiers": {
                        "optional": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "right_arrow",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Move left a space",   
                "from": {
                    "key_code": "s"
                },
                "to": [
                    {
                        "key_code": "left_arrow",
                        "modifiers": [
                            "control"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            },
            {
                "description": "Move right a space",   
                "from": {
                    "key_code": "d"
                },
                "to": [
                    {
                        "key_code": "right_arrow",
                        "modifiers": [
                            "control"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "name": "trigger key pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "type": "basic"
            }
        ]
    }
]
}